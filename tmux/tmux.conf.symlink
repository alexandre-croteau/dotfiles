set -g @plugin 'tmux-plugins/tpm'
set-option -g @tpm-install "I";
set-option -g @tpm-update "U";
set-option -g @tpm-clean "C-u";

# ...
set -g @plugin 'tmux-plugins/tmux-sensible'
