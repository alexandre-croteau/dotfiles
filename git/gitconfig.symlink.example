[user]
        email = GIT_AUTHOREMAIL
        name = GIT_AUTHORNAME
        signingkey = GIT_SIGNINGKEY
[alias]
        br = branch
        c = commit -v
        co = checkout
        cob = checkout -b
        cp = cherry-pick
        d = diff
        dd = diff --cached
        l = log --oneline --graph
        lg = log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(dim white)- %an%C(reset)%C(auto)%d%C(reset)' --all
        pb = pull --rebase
        pl = pull
        ps = push
        s = status
[apply]
        whitespace = nowarn
[branch]
        autoSetupRemote = true
[color]
        branch = auto
        diff = auto
        status = auto
        ui = true
[commit]
        gpgsign = true
[core]
        editor = code --wait
        excludesfile = ~/.gitignore
        pager = delta
[credential]
        helper = manager
[credential "https://ghcr.io"]
        provider = github
[delta]
        dark = true
        line-numbers = true
        navigate = true
[diff]
        colorMoved = default
        tool = vscode
[difftool]
        prompt = false
[difftool "vscode"]
        cmd = code --wait --diff $LOCAL $REMOTE
[filter "lfs"]
        clean = git-lfs clean -- %f
        process = git-lfs filter-process
        required = true
        smudge = git-lfs smudge -- %f
[help]
        autocorrect = 1
[hub]
        protocol = https
[init]
        defaultBranch = main
[interactive]
        diffFilter = delta --color-only
[merge]
        conflictstyle = diff3
        tool = vscode
[mergetool]
        keepBackup = false
[mergetool "vscode"]
        cmd = code --wait $MERGED
[pull]
        rebase = true
[push]
        default = simple
[rebase]
        autoStash = true
[remote "origin"]
        prune = true
